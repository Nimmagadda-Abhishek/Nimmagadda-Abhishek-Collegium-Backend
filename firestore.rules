rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    // Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user is the owner of the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Check if the user is a participant in the chat
    // Requires 'participants' array field in the chat document
    function isParticipant(roomId) {
      return isSignedIn() && 
             request.auth.uid in get(/databases/$(database)/documents/chats/$(roomId)).data.participants;
    }

    // --- Rules ---

    // 1. Users Collection
    // Public read (authenticated) so users can see each other's names/avatars
    // Write only by the user themselves
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // 2. Chats Collection (The Rooms)
    // Document ID: sorted uids like "uid1_uid2"
    match /chats/{roomId} {
      // READ: Allow if user is in the 'participants' array of the existing doc
      allow read: if isSignedIn() && (request.auth.uid in resource.data.participants);
      
      // CREATE: Allow if user is in the 'participants' array of the NEW doc
      // and the doc ID matches the sorted UIDs (optional strictness, but good for consistency)
      allow create: if isSignedIn() && 
                    (request.auth.uid in request.resource.data.participants);

      // UPDATE: Allow if user is a participant (e.g. updating lastMessage)
      allow update: if isSignedIn() && (request.auth.uid in resource.data.participants);

      // 3. Messages Subcollection
      match /messages/{messageId} {
        // Allow read/write ONLY if the user is a participant of the PARENT chat room
        // We use the 'isParticipant' helper which reads the parent doc
        allow read, write: if isParticipant(roomId);
      }
    }
  }
}
